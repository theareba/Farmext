<body class="theme-default main-menu-animated">

<script>var init = [];</script>

<div id="main-wrapper">


  <%= render 'admin/shared/header' %>

  <%= render 'admin/shared/sidebar' %>

  <div id="content-wrapper">
    <ul class="breadcrumb breadcrumb-page">
      <div class="breadcrumb-label text-light-gray">You are here: </div>
      <li><a href="<%= root_path %>">Home</a></li>
      <li class="active"><a href="<%= admin_farmers_path %>">Farmer</a></li>
    </ul>
    <div class="page-header">

      <div class="row">
        <!-- Page header, center on small screens -->
        <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-dashboard page-header-icon"></i>&nbsp;&nbsp;Dashboard</h1>

        <div class="col-xs-12 col-sm-8">
          <div class="row">
            <hr class="visible-xs no-grid-gutter-h">

            <!-- Margin -->
            <div class="visible-xs clearfix form-group-margin"></div>

            <!-- Search field -->
            <form action="index.html" class="pull-right col-xs-12 col-sm-6">
              <div class="input-group no-margin">
                <span class="input-group-addon" style="border:none;background: #fff;background: rgba(0,0,0,.05);"><i class="fa fa-search"></i></span>
                <input type="text" placeholder="Search..." class="form-control no-padding-hr" style="border:none;background: #fff;background: rgba(0,0,0,.05);">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div> <!-- / .page-header -->

    <script>
        init.push(function () {
            $('#dashboard-recent .panel-body > div').slimScroll({ height: 300, alwaysVisible: true, color: '#888',allowPageScroll: true });
        })
    </script>
    <!-- / Javascript -->

    <div class="row">
      <!-- 11. $JQUERY_DATA_TABLES ===========================================================================

                    jQuery Data Tables
      -->
      <!-- Javascript -->
      <script>
          init.push(function () {
              $('#jq-datatables-example').dataTable();
              $('#jq-datatables-example_wrapper .table-caption').text('Some header text');
              $('#jq-datatables-example_wrapper .dataTables_filter input').attr('placeholder', 'Search...');
          });
      </script>
      <!-- / Javascript -->

      <div class="panel">
        <div class="panel-heading">
          <span class="panel-title">Buyers</span>
        </div>
        <div class="panel-body">
          <div class="table-primary">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="jq-datatables-example">
              <thead>
              <tr>
                <th>Farmer Name</th>
                <th>Phone Number</th>
                <th>Products Selling</th>
              </tr>
              </thead>
              <% @users.each do |user| %>
                  <tbody>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.products.map { |p| p.name } %></td>
                  </tr>
                  </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
      <!-- /11. $JQUERY_DATA_TABLES -->

    </div>
  </div> <!-- / #content-wrapper -->
  <div id="main-menu-bg"></div>
</div> <!-- / #main-wrapper -->

<script type="text/javascript">
    init.push(function () {
        // Javascript code here
    })
    window.PixelAdmin.start(init);
</script>

</body>
